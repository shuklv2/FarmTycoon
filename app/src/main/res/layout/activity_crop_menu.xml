<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.group7.farmtycoon.CropMenu">

    <Button
        android:id="@+id/plantBtn"
        android:onClick="plantBtnPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plant Crops"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="290dp" />

    <Button
        android:id="@+id/clearBtn"
        android:onClick="clearBtnPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Crops"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="354dp" />

    <Button
        android:id="@+id/waterBtn"
        android:onClick="waterBtnPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Crops"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="222dp" />

    <Button
        android:id="@+id/harvestBtn"
        android:onClick="harvestBtnPress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harvest Crops"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="156dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/viewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="84dp"
        android:onClick="viewBtnPress"
        android:text="View Status"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
